{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "playground/**/*",
    "playground/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*", "**/*/*.test.ts"],
  "compilerOptions": {
    "composite": true,
    "ignoreDeprecations": "5.0",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "vue-use-leaflet": ["./src/index.ts"]
    }
  }
}
